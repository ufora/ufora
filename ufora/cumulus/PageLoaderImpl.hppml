	void broadcastRemotePageLoadRequest(RemotePageLoadRequest msg);

	void broadcastPageLoadFailed(VectorDataID vdid);

	void handleRemoteExternalDatasetLoadResponse(RemoteExternalDatasetLoadResponse response);

