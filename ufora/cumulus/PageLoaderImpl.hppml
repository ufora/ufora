							PolymorphicSharedPtr<DataTransfers> throttler,
							DataTransferTokenId inToken
							);

	void handleRemoteExternalDatasetLoadRequestWithToken(
							RemoteExternalDatasetLoadRequest request,
							DataTransferTokenId inToken
							);

