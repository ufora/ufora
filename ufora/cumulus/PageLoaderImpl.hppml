	void handleRemoteExternalDatasetLoadRequest(RemoteExternalDatasetLoadRequest request);

	void handleRemotePageLoadRequestOnBackgroundThread(
							const RemotePageLoadRequest& inRequest,
							DataTransferTokenId inToken
