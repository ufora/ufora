void Serializer<PolymorphicSharedPtr<CFGWithFutures>, Fora::ForaValueSerializationStream>::
        serialize(Fora::ForaValueSerializationStream& s, const PolymorphicSharedPtr<CFGWithFutures>& t)
    {
    t->serialize(s);
