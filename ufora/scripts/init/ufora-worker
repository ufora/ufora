SCRIPT_DIR=$(cd $(dirname "$0"); pwd)

# Load configuration helper
. $SCRIPT_DIR/_config.sh
load_config

SERVICE_NAME=ufora-worker
SERVICE_LAUNCHER="python"
SERVICE_DIR=$SCRIPT_DIR
SERVICE_FILE=$SERVICE_DIR/ufora-worker.py
SERVICE_ARGS=""
FOREVER_ARGS="--killSignal=SIGKILL"

SERVICE_COMMAND=$1
control_service
